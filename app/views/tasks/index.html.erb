<div class="container">
  <h1 class="text-center mt-4 mb-5">My tasks</h1>

  <div class="d-flex justify-content-center">
    <% @tasks.each do |task| %>
      <div class=" m-4 w-75">
        <div class="card ">
          <div class="card-body">
            <h5 class="card-title">Task:</h5>
            <p class="card-text"><%= task.title %></p>
            <hr>
            <h5 class="card-title">Details:</h5>
            <p class="card-text"><%= task.details %></p>
            <hr>
            <h5 class="card-title">Complete:</h5>
            <p><%= task.completed ? '✅' : '❌' %></p>
            <hr>
            <div class="text-center">
              <%= link_to "Show", task_path(task.id), class: "btn btn-primary btn-sm m-1" %>
              <%= link_to "Edit", edit_task_path(task.id), class: "btn btn-primary btn-sm m-1" %>
              <%= link_to 'Destroy', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm m-1" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6 text-center mt-4">
      <%= link_to "New Task", new_task_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
